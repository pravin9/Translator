<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coursework2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SavedActivity"
            android:label="Saved Translations"/>

        <activity android:name=".TranslateAllActivity"
            android:label="Translate All" />

        <activity android:name=".TranslationActivity"
            android:label="Translation" />

        <activity
            android:name=".LanguageActivity"
            android:label="Language Subscription" />

        <activity
            android:name=".EditActivity"
            android:label="Edit Phrases"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <activity
            android:name=".DisplayActivity"
            android:label="Display Phrases"
            android:configChanges="screenSize|orientation|screenLayout|smallestScreenSize|colorMode"/>

        <activity
            android:name=".AddActivity"
            android:configChanges="screenSize|orientation|screenLayout|smallestScreenSize|colorMode"
            android:label="Add Phrases"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>